<div class="page-content d-flex justify-content-end">

  <div class="success" style="margin-right: 30px;">
    {{#if success}}
      <div class="d-flex bg-success align-items-center bg-gradient text-center" style="border: 1px; border-radius: 5px; height: 38px; padding: 0px 10px;" id="suck">{{success}}</div>
    {{/if}}
    {{#if error}}
      <div class="d-flex bg-danger align-items-center bg-gradient text-center" style="border: 1px; border-radius: 5px; height: 38px; padding: 0px 10px;" id="fuck">{{error}}</div>
    {{/if}}
    </div>

  <button type="button" class="btn btn-light ml-2" data-bs-toggle="modal"
    data-bs-target="#createAdm">Добавить</button>

    <div class="modal fade" id="createAdm" tabindex="-1" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content bg-gradient">
        <div class="modal-header">
          <h5 class="modal-title">Создать администратора</h5>
          <button type="button" onclick="resetF()" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/admin/create?_csrf={{csrf}}" method="post" name="reset">
            <input type="hidden" name="_id" value="">
            <div>
              <div class="row d-flex align-items-center mb-3">
                <div class="col-6">
                  <input type="text" class="form-control" name="name" placeholder="Имя нового администратора">
                </div>
                <div class="col-6">
                  <input type="password" class="form-control" name="password" placeholder="Пароль">
                </div>
              </div>
              <label class="mb-2">Уровни администратора</label>
              <div>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="role" id="inlineRadio1" value="0">
                  <label class="form-check-label" for="inlineRadio1">Первый уровень</label>
                </div>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="role" id="inlineRadio1" value="1">
                  <label class="form-check-label" for="inlineRadio1">Второй уровень</label>
                </div>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="role" id="inlineRadio1" value="2">
                  <label class="form-check-label" for="inlineRadio1">Третий уровень</label>
                </div>
              </div>
            </div>
            <div class="d-flex justify-content-center">
              <button type="submit" class="btn btn-light" style="margin-top: 50px;">Добавить</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="editAdm" tabindex="-1" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content bg-gradient">
        <div class="modal-header">
          <h5 class="modal-title">Изменение данных администратора</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/admin/edit?_csrf={{csrf}}" method="post" name="changeAdm">
            <input type="hidden" name="_id" value="">
            <div>
              <div class="row d-flex align-items-center mb-3">
                <div class="col-6">
                  <input type="text" class="form-control" data-test="yes" name="name">
                </div>
                <div class="col-6">
                  <input type="password" class="form-control" name="password" name="password" placeholder="Пароль">
                </div>
              </div>
              <label class="mb-2">Уровни администратора</label>
              <div>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="role" id="inlineRadio1" value="0">
                  <label class="form-check-label" for="inlineRadio1">Первый уровень</label>
                </div>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="role" id="inlineRadio1" value="1">
                  <label class="form-check-label" for="inlineRadio1">Второй уровень</label>
                </div>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="role" id="inlineRadio1" value="2">
                  <label class="form-check-label" for="inlineRadio1">Третий уровень</label>
                </div>
              </div>
            </div>
            <div class="d-flex justify-content-center">
              <button type="submit" class="btn btn-light" style="margin-top: 50px;">Добавить</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="page-content">
  <div class="row row-cols-1 row-cols-lg-2 row-cols-xl-4">
  {{#each adm}} 
    <div class="col">
      <div class="card radius-15">
        <div class="card-body text-center">
          <div class="p-2 border radius-15">
            <h5 class="mb-0 mt-2">{{name}}</h5>
            <p class="mb-3">{{role}}</p>
            <div>
              <a href="/admin/delete/{{_id}}" class="mr-3 btn none__btn" style="padding-top: 7px; padding-right: 15px;"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash text-danger">
                <polyline points="3 6 5 6 21 6"></polyline>
                <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
              </svg>
            </a>
            <button class="btn ml-3 none__btn" onclick="editAdm('{{_id}}')" data-bs-toggle="modal" data-bs-target="#editAdm">
              <i class="fadeIn animated bx bx-pencil text-white"></i>
            </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
  </div>
</div>

<script>
  let editForm = document.forms.changeAdm

  function editAdm(id){
    fetch(`/admin/editAdm/${id}`)
    .then(res => res.json())
    .then(admin =>{
      editForm._id.value = id
      editForm.name.value = admin.name
        editForm.role.value = admin.role
    })
  }

  let resetForm = document.forms.reset

  function resetF(){
    resetForm.reset()
  }
</script>