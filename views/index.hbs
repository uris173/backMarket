<div class="page-content">
  <div class="card radius-10">
    <div class="row row-cols-1 row-cols-md-2 row-cols-xl-5 row-group g-0">
      <div class="col">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <h5 class="mb-0">{{categoryCount}}</h5>
            <div class="ms-auto">
              <i class="bx bx-align-left fs-3 text-white"></i>
            </div>
          </div>
          <div class="d-flex align-items-center text-white">
            <p class="mb-0">Категории</p>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <h5 class="mb-0">{{subcategoryCount}}</h5>
            <div class="ms-auto">
              <i class="bx bx-box fs-3 text-white"></i>
            </div>
          </div>
          <div class="d-flex align-items-center text-white">
            <p class="mb-0">Субкатегории</p>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <h5 class="mb-0">{{productCount}}</h5>
            <div class="ms-auto">
              <i class="fadeIn animated bx bx-shopping-bag fs-3 text-white"></i>
            </div>
          </div>
          <div class="d-flex align-items-center text-white">
            <p class="mb-0">Продукты</p>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <h5 class="mb-0">5630</h5>
            <div class="ms-auto">
              <i class="bx bx-cart fs-3 text-white"></i>
            </div>
          </div>
          <div class="d-flex align-items-center text-white">
            <p class="mb-0">Заказы</p>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card-body">
          <div class="d-flex align-items-center">
            <h5 class="mb-0">5630</h5>
            <div class="ms-auto">
              <i class="bx bx-group fs-3 text-white"></i>
            </div>
          </div>
          <div class="d-flex align-items-center text-white">
            <p class="mb-0">Пользователи</p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="card-body">
  <h5 class="card-title mt-2 mb-3">Недвано добавленные товары</h5>
  <table class="table mb-0 table-hover">
    <thead>
      <tr>
        <th scope="col">#</th>
        {{!-- <th scope="col">Название</th> --}}
        <th scope="col">Наименование</th>
        <th scope="col">Категории</th>
        <th scope="col">Субкатегория</th>
        <th scope="col">Цена</th>
        <th scope="col">Статус</th>
      </tr>
    </thead>
    <tbody>
      {{#each product}}
      <tr>
        <td scope="row" style="padding-top: 15px;">{{index}}</td>
        <td style="padding-top: 15px; width: 600px;">{{title}}</td>
        <td style="padding-top: 15px;">{{subcategory.category.title}}</td>
        <td style="padding-top: 15px;">{{subcategory.subTitle}}</td>
        <td style="padding-top: 15px;">{{price}} сум</td>
        <td style="padding-top: 15px;"><span class="badge {{class}}">{{status}}</span></td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
</div>

